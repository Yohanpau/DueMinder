generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String     @unique
  passwordHash String
  bills        Bill[]
  budget       Float
  priorities   Priority[]
  payments     Payment[]
}

model Bill {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  amount    Float
  dueDate   DateTime
  priority  Int 
  status    String     @default("Unpaid") 
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?    @db.ObjectId
  payments  Payment[]  
}

model Priority {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  type   String
  level  Int
  user   User?    @relation(fields: [userId], references: [id])
  userId String?  @db.ObjectId
}

model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  paidAt    DateTime @default(now())
  bill      Bill?    @relation(fields: [billId], references: [id])
  billId    String?  @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
}
