generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String   @unique
  passwordHash String
  bills        Bill[]
  budget       Float
  priorities   Priority[]
}

model Bill {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  amount   Float
  dueDate  DateTime
  priority Int // 1 = high, 2 = medium, 3 = low
  user     User?    @relation(fields: [userId], references: [id])
  userId   String?  @db.ObjectId
}

model Priority {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  type       String
  level      Int
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?  @db.ObjectId
}
